# Treat vendor and node_modules as vendored (excluded from language stats)
vendor/** linguist-vendored
node_modules/** linguist-vendored

# Exclude build / compiled assets that shouldn't count
public/build/** linguist-generated
public/mix-manifest.json linguist-generated
storage/** linguist-generated

# Mark common non-source files as generated
resources/js/dist/** linguist-generated
resources/css/dist/** linguist-generated

# Ensure php files are counted as PHP (optional)
*.php linguist-language=PHP
